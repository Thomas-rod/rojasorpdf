<div class="container-banner">
  <img src="https://rojasorfrance.com/wp-content/uploads/2020/02/Logo-petit-Soleil-Rouge-detoure.png" alt="" class="avatar-large mb-5">
  <div class="container-session">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "Email", placeholder: 'Email' } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "Mot de passe", placeholder: 'Mot de passe' } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class: 'button-roja', value: 'Se connecter'%>
    </div>
  <% end %>
  </div>
</div>


